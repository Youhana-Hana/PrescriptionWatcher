<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
 
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="3">

        <ListView android:id="@+id/list"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:drawSelectorOnTop="false"
                  android:layout_gravity="left|center_vertical"/>

        <TextView android:id="@android:id/empty"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="@string/noPrescriptions"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        
                  android:layout_height="100dp"
                    android:layout_weight="1" android:gravity="center_vertical|center_horizontal" >

      <Button android:layout_width="fill_parent" android:id="@+id/newprescription_button"
              android:layout_height="wrap_content"
              android:text="@string/newPrescription"
              android:onClick="createPrescription"
        />
    </LinearLayout>

</LinearLayout>