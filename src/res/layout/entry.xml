<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
                android:layout_width="match_parent" android:background="@drawable/gray"
                android:layout_height="wrap_content" android:layout_margin="10dp">

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp"
            android:padding="10dp" style="@style/titletypepurpulmeduim"
            android:textIsSelectable="false"
            />

    <TextView
            android:id="@+id/timesPerDay" android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content" style="@style/titletypepurpulmeduim"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textIsSelectable="false"
            />

    <TextView
            android:id="@+id/start" android:layout_marginLeft="10dp"
            android:layout_below="@id/title"
            android:layout_alignParentLeft="true" style="@style/titletypepurpulmeduim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textIsSelectable="false"
            />

    <TextView
            android:id="@+id/end"
            android:layout_below="@id/title" android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" style="@style/titletypepurpulmeduim"
            />

    <Button
            android:id="@+id/share"
            android:layout_below="@id/start"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
            android:padding="5dp" android:layout_marginLeft="10dp" 
            android:onClick="shareItem" android:background="@drawable/savebtn"
            android:text="@string/share"
            />
    <Button
            android:id="@+id/delete" android:layout_alignBaseline="@id/share"
            android:layout_below="@id/end" android:background="@drawable/savebtn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content" android:layout_marginRight="10dp" 
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:onClick="deleteItem"
            android:text="@string/delete" android:textColor="#FFFFFFFF"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/share" 
        android:layout_toRightOf="@+id/start"
        android:orientation="vertical" >
    </LinearLayout>
    
</RelativeLayout>